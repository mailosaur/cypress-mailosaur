{
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "requireConfigFile": false,
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "babelOptions": {
      "presets": [
        "@babel/preset-react"
      ]
    }
  },
  "plugins": [
    "react"
  ],
  "extends": [
    "airbnb-base",
    "eslint:recommended"
  ],
  "globals": {
    "cy": true,
    "Cypress": true
  },
  "rules": {
    "max-len": "off"
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "^16.7.0"
    }
  }
}
