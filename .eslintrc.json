{
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react"
  ],
  "extends": [
    "airbnb-base",
    "eslint:recommended"
  ],
  "globals": {
    "cy": true,
    "Cypress": true
  },
  "rules": {
    "max-len": "off"
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "^16.7.0"
    }
  }
}
